<div class="content">
  <div class="top-content">
    <div id="section1" class="section hide">
      <div class="msg-area">
        <span>Section1</span>
      </div>
      <div class="btn-area">
        <div class="fb-login-button" data-width="" data-size="large" data-button-type="continue_with" data-auto-logout-link="false" data-use-continue-as="true"
